/*-----------------------------------------------------------------------------------*/
/*  TYPOGRAPHY
/*-----------------------------------------------------------------------------------*/
hr
  border-color: #ededed

ul,
ol
  padding: 0
  margin: 0

li
  padding: 0
  margin: 0
  list-style: none

p
  margin: 0 0 20px

h1,
h2,
h3,
h4,
h5,
h6
  margin-top: 0
  font-family: 'Lato', sans-serif
  text-transform: none
  font-weight: 900
  color: #333

h1
  margin: 0 0 26px
  line-height: 46px
  font-size: 46px

h2
  margin: 0 0 26px
  line-height: 40px
  font-size: 40px

h3
  margin: 0 0 21px
  line-height: 38px
  font-size: 30px

h4
  margin: 0 0 34px
  line-height: 25px
  font-size: 20px

h5
  margin: 0 0 15px
  line-height: 20px
  font-size: 15px

h6
  margin: 0 0 15px
  line-height: 20px
  font-size: 12px

.center
  text-align: center

.right
  text-align: right

.color_text
  color: #30a67c

section .title
  padding-bottom: 56px
  text-transform: uppercase
  font-weight: 900
  line-height: 100px
  font-size: 100px
  color: #fff
