
/* __________ Services __________ */
.services_item
  position: relative
  display: block
  padding: 80px 25px 0

.services_item:before
  content: ''
  position: absolute
  left: 0
  right: 0
  top: 0
  height: 2px
  transition: all 0.3s ease-in-out
  -webkit-transition: all 0.3s ease-in-out

.services_item.bg1:before
  background-color: orange

.services_item.bg2:before
  background-color: red

.services_item.bg3:before
  background-color: blue

.services_item:hover:before
  height: 6px

.services_item i
  position: relative
  display: block
  width: 130px
  height: 130px
  margin: 0 auto 25px
  line-height: 130px
  font-size: 70px
  color: #fff
  border-radius: 50%
  cursor: default
  transition: all 0.3s ease-in-out
  -webkit-transition: all 0.3s ease-in-out

.services_item.bg1 i
  box-shadow: 0 0 0 75px orange inset

.services_item.bg2 i
  box-shadow: 0 0 0 75px red inset

.services_item.bg3 i
  box-shadow: 0 0 0 75px blue inset

.services_item.bg1:hover i
  box-shadow: 0 0 0 3px orange inset
  color: orange

.services_item.bg2:hover i
  box-shadow: 0 0 0 3px red inset
  color: red

.services_item.bg3:hover i
  box-shadow: 0 0 0 3px blue inset
  color: blue

.services_item p
  margin-bottom: 9px
  text-transform: none
  line-height: 32px
  font-size: 28px
  color: #333
  transition: all 0.3s ease-in-out
  -webkit-transition: all 0.3s ease-in-out

.services_item.bg1:hover p
  color: orange

.services_item.bg2:hover p
  color: red

.services_item.bg3:hover p
  color: blue

.services_item span
  display: block
  line-height: 22px
  font-size: 14px
  color: #666
  transition: all 0.3s ease-in-out
  -webkit-transition: all 0.3s ease-in-out

.services_item:hover span
  color: #333