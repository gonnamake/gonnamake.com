
.pagination
  display: block
  margin: 0 0 50px
  padding: 0
  border-radius: 0

.pagination li
  float: left
  width: 63px
  height: 63px
  margin: 0 5px 0 0

.pagination li a
  float: none
  display: block
  margin: 0
  padding: 0
  border: 0
  font-weight: 900
  text-align: center
  line-height: 68px
  font-size: 20px
  color: #333
  background-color: #eaeaea
  border-radius: 0 !important

.pagination li.active a,
.pagination li a:focus,
.pagination li a:hover
  background: red !important
  color: #fff !important